<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DvdRipper.Views.MainWindow"
        Width="600" Height="450"
        Title="DVD Ripper">
  <!-- remove Design.DataContext and mc:Ignorable -->
  <StackPanel Margin="10" Spacing="8">
    <StackPanel Orientation="Horizontal" Spacing="4">
      <TextBlock Text="DVD Device:" Width="80" />
      <TextBox Width="200" Text="{Binding Device, Mode=TwoWay}" />
    </StackPanel>
    <StackPanel Orientation="Horizontal" Spacing="4">
      <TextBlock Text="Title:" Width="80" />
      <ComboBox Width="200"
                SelectedItem="{Binding SelectedTitle, Mode=TwoWay}" />
    </StackPanel>
    <StackPanel Orientation="Horizontal" Spacing="4">
      <TextBlock Text="Output file:" Width="80" />
      <TextBox Width="350" Text="{Binding OutputPath, Mode=TwoWay}" />
    </StackPanel>
    <StackPanel Orientation="Horizontal" Spacing="6">
      <Button Content="Scan Titles" Command="{Binding ScanCommand}" />
      <Button Content="Rip"         Command="{Binding RipCommand}" />
    </StackPanel>
    <ProgressBar Height="20" Minimum="0" Maximum="100"
                 Value="{Binding Progress}" />
    <!-- either quote the StringFormat or remove it entirely -->
    <TextBlock Text="{Binding Progress, StringFormat='Progress: {0:F1}%'}" />
    <TextBlock Text="Log:"/>
    <TextBox Text="{Binding Log}"
             AcceptsReturn="True" IsReadOnly="True"
             Height="180" />
  </StackPanel>
</Window>
